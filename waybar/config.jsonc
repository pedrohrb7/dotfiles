      // "on-click-right":
      // "on-scroll-up":
      // "on-scroll-down":
    }
  },
  "cpu": {
    // "format": "{usage}% Ôãõ",
    "tooltip": false,
    "format": "Û∞çõ {usage}%",
    "format-warning": "Û∞Ä® {usage}%",
    "format-critical": "Û∞Ä® {usage}%"
