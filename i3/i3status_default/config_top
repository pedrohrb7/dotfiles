general {
        output_format = "i3bar"
        colors = true
        interval = 1
        separator = "  ||  "
}

order += "cpu_usage"
order += "memory"

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "used: %used / free: %free || T: %total"
        threshold_degraded = "10%"
}

