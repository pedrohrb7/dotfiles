general {
        output_format = "i3bar"
        colors = true
        interval = 1
        separator = "  ||  "
}

order += "wireless wlan0"
order += "ethernet enp0s25"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless wlan0 {
        format_up = "Wifi: (%quality at %essid, %bitrate) | %ip"
        format_down = "Wifi: down"
}

ethernet enp0s25 {
        format_up = "LAN: %ip (%speed)"
        format_down = "LAN: down"
}

tztime local {
        format = "%d-%m-%Y %H:%M:%S"
        hide_if_equals_localtime = false
        timezone = "America/Sao_Paulo"
        locale = "pt_BR.UTF-8"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "%status %percentage | remainTime: %remaining | "
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}
